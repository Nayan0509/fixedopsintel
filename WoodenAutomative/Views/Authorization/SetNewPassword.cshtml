@model WoodenAutomative.Domain.Dtos.Request.Password.SetPasswordRequest
@{
    ViewData["Title"] = "Set New Password";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<style>

</style>
<div class="loader">
    <div class="h-100 d-flex justify-content-center">
        <div class="align-self-center">
            <img src="~/assets/img/loader/loader.svg" alt="loader">
        </div>
    </div>
</div>
<!-- end pre-loader -->
<!--start login contant-->
<div class="app-contant">
    <div class="bg-white comingsoon">
        <div class="container-fluid p-0">
            <div class="row no-gutters">
                <div class="col-lg-12 align-self-center bg-gradient">
                    <div class="d-flex align-items-center h-100-vh">
                        <div class="comingsoon-wrap w-100">
                            <div class="row no-gutters align-items-center justify-content-center">
                                <div class="col-md-10 text-center m-b-40" id="setPassword">

                                    <!-- Coming soon text -->
                                    <div class="px-5">
                                        <h3 class="text-white display-3 font-weight-normal">Set New Password</h3>
                                    </div>
                                    <!-- newsletter -->
                                    <div class="row no-gutters" id="setPassword">
                                        <div class="col-md-7 mx-auto">
                                            <p class="text-white">Please Provider New Password</p>
                                            <span class="visually-hidden" id="errormsg" style="color: red;"> Password and Confrim Password not matched</span>
                                            <form class="px-5 mt-3">
                                                @* method="post" action="SetNewPassword"*@
                                                @Html.PasswordFor(m => m.Password, new { id = "password", @class = "form-control bg-white-inverse", @placeholder = "Enter Password", @style = "margin-bottom:14px !important;" })
                                                <br />
                                                @Html.PasswordFor(m => m.ConfrimPassword, new { id = "confrimPassword", @class = "form-control bg-white-inverse", @placeholder = "Enter Confirm Password", @style = "margin-bottom:14px !important;" })
                                            </form>
                                            <div class="mt-3"><button class="btn btn-inverse-light" id="save"> Save </button></div>
                                        </div>
                                    </div>

                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
        });
        // Write your JavaScript code.
        function showError(message) {
            var toaster = document.getElementById("toaster");
            toaster.querySelector(".toaster-message").innerHTML = message;
            toaster.classList.add("toaster-error");
            toaster.style.display = "block";
            setTimeout(function () {
                toaster.classList.remove("toaster-error");
                toaster.style.display = "none";
            }, 5000);
        }

        $("#save").click(function () {
            var pass = $("#password").val();
            var cpass = $("#confrimPassword").val();
            if (pass === cpass) {

            }
            else if (pass === null) {
                alert("Please Enter Password");
            }
            else if (cpass === null) {
                alert("Please Enter Confrim Password");
            }
            else {
                var x = document.getElementById("snackbar");
                x.className = "show";
                x.innerHTML = "Hello, world!";
                setTimeout(function () { x.className = x.className.replace("show", ""); }, 1000);

            }
        });
    </script>
}
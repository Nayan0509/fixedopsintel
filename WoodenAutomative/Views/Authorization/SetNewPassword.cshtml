@model WoodenAutomative.Domain.Dtos.Request.Password.SetPasswordRequest
@{
    ViewData["Title"] = "Set New Password";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<style>

</style>
<div class="loader">
    <div class="h-100 d-flex justify-content-center">
        <div class="align-self-center">
            <img src="~/assets/img/loader/loader.svg" alt="loader">
        </div>
    </div>
</div>
<!-- end pre-loader -->
<!--start login contant-->
<div class="app-contant">
    <div class="bg-white comingsoon">
        <div class="container-fluid p-0">
            <div class="row no-gutters">
                <div class="col-lg-6 align-self-center bg-gradient">
                    <div class="d-flex align-items-center h-100-vh">
                        <div class="comingsoon-wrap w-100">
                            <div class="row no-gutters align-items-center justify-content-center">
                                <div class="col-md-10 text-center m-b-40" id="setPassword">

                                    <!-- Coming soon text -->
                                    <div class="px-5">
                                        <h3 class="text-white display-3 font-weight-normal">Set New Password</h3>
                                    </div>
                                    <!-- newsletter -->
                                    <div class="row no-gutters" id="setPassword">
                                        <div class="col-md-7 mx-auto">
                                            <p class="text-white">Please Provider New Password</p>
                                            <span class="visually-hidden" id="errormsg" style="color: red;"> Password and Confrim Password not matched</span>
                                            <form class="px-5 mt-3" method="post" action="SavePassword" id="setpassword">
                                                @Html.PasswordFor(m => m.Password, new { id = "password", @class = "form-control bg-white-inverse", @placeholder = "Enter Password", @style = "margin-bottom:14px !important;" })
                                                <br />
                                                @Html.PasswordFor(m => m.ConfrimPassword, new { id = "confrimPassword", @class = "form-control bg-white-inverse", @placeholder = "Enter Confirm Password", @style = "margin-bottom:14px !important;" })
                                                <br />
                                                <div class="mt-3"><button type="submit" class="btn btn-inverse-light" id="save"> Save </button></div>
                                            </form>
        
                                        </div>
                                    </div>

                                </div>

                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 align-self-end">
                    <img class="img-fluid" src="~/assets/img/bg/coming-soon-bg.svg" alt="">
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        const setpassword = document.querySelector('#setpassword');

        setpassword.addEventListener('submit', function (event) {
            var pass=$("#password").val();
            var cpass = $("#confrimPassword").val();

            // Prevent the form from submitting
            event.preventDefault();

            // Get the form data
            const formData = new FormData(setpassword);

            // Validate the form data
            if (pass === "" && cpass === "") {
                var x = document.getElementById("snackbar");
                x.className = "show";
                x.innerHTML = "please enter Password and Confrim Password";
                setTimeout(function () { x.className = x.className.replace("show", ""); }, 1000);
                return;
            }
            else if (pass === "") {
                var x = document.getElementById("snackbar");
                x.className = "show";
                x.innerHTML = "please enter a Password";
                setTimeout(function () { x.className = x.className.replace("show", ""); }, 1000);
                return;
            }
            else if (cpass === "") {
                var x = document.getElementById("snackbar");
                x.className = "show";
                x.innerHTML = "please enter a Confrim Password";
                setTimeout(function () { x.className = x.className.replace("show", ""); }, 1000);
                return;
            }
            else if (pass != cpass) {
                        var x = document.getElementById("snackbar");
                        x.className = "show";
                        x.innerHTML = "Password and Confrim Password not matched";
                        setTimeout(function () { x.className = x.className.replace("show", ""); }, 1000);
                return;
            }

            // Submit the form
            setpassword.submit();
        });

        $(document).ready(function () {
        });
    </script>
}
@model WoodenAutomative.Domain.Dtos.Request.Password.ForgotPassword
@{
    ViewData["Title"] = "Set New Password";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<style>

</style>
<div class="loader">
    <div class="h-100 d-flex justify-content-center">
        <div class="align-self-center">
            <img src="~/assets/img/loader/loader.svg" alt="loader">
        </div>
    </div>
</div>
<!-- end pre-loader -->
<!--start login contant-->
<div class="app-contant">
    <div class="bg-white comingsoon">
        <div class="container-fluid p-0">
            <div class="row no-gutters">
                <div class="col-lg-12 align-self-center bg-gradient">
                    <div class="row no-gutters">
                        <div class="col-lg-6 order-2 order-sm-1">
                    
                    <div class="d-flex align-items-center h-100-vh">
                        <div class="comingsoon-wrap w-100">
                            <div class="row no-gutters align-items-center justify-content-center">
                                <div class="col-md-10 text-center m-b-40" id="setPassword">
                                        
                                    @*        <img src="/assets/img/logo1.png" style="width: 400px;" />*@
                                    <!-- Coming soon text -->
                                    <div class="px-2">
                                        <h3 class="text-white display-6 font-weight-normal">Forgot Password</h3>
                                    </div>
                                    <!-- newsletter -->
                                    <div class="row no-gutters" id="forgotPassword">
                                        <div class="col-md-7 mx-auto">
                                            <p class="text-white">Enter your Email Address</p>
                                            <span class="visually-hidden" id="errormsg" style="color: red;"> Password and Confrim Password not matched</span>
                                            <form class="px-5 mt-3" method="post" action="Verification" id="forgotPassword">
                                                @Html.TextBoxFor(m => m.EmailAddress, new { id = "email", @class = "form-control bg-white-inverse", @placeholder = "Please enter your email address",@style = "margin-bottom:15px !important;"})
                                                <span id="emailError" class="text-danger">@TempData["EmailInvalid"]</span>
                                                <div class="mt-3"><button type="submit" class="btn btn-primary text-uppercase font-bold" id="save"> Send </button></div>
                                            </form>
                                        </div>
                                    </div>

                                </div>

                            </div>
                        </div>
                    </div>
                    </div>
                        <div class="col-lg-6 o-hidden order-1 order-sm-2">
                        <img class="img-fluid" src="~/assets/img/bg/coming-soon-bg.svg" alt="" style="width:100%">
                    </div>
                    </div>
                </div>
@*                <div class="col-lg-6 align-self-end">
                    <img class="img-fluid" src="~/assets/img/bg/coming-soon-bg.svg" alt="">
                </div>*@
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>


        $("form").submit(function () {
            $("#emailError").text("");

            var email = $("#email").val();
            var emailPattern = /^(([^<>()[\]\\.,;:\s@@\"]+(\.[^<>()[\]\\.,;:\s@@\"]+)*)|(\".+\"))@@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;

               if (email == "") {
                $("#emailError").text("Email Address is required");
                return false;
            }
            else if (!emailPattern.test(email))
            {
                $("#emailError").text("Please enter a valid email address");
                return false;
            }
        });
        $("#email").on("input", function () {
            $("#emailError").text("");
        });
    </script>
}
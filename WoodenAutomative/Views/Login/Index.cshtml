@model WoodenAutomative.Domain.Dtos.Request.Login.LoginRequest
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}



            <!-- begin pre-loader -->
            <div class="loader">
                <div class="h-100 d-flex justify-content-center">
                    <div class="align-self-center">
                        <img src="~/assets/img/loader/loader.svg" alt="loader">
                    </div>
                </div>
            </div>
            <!-- end pre-loader -->

            <!--start login contant-->
            <div class="app-contant">
                <div class="bg-white">
                    <div class="container-fluid p-0">
                        <div class="row no-gutters">
                            <div class="col-sm-6 col-lg-5 col-xxl-3  align-self-center order-2 order-sm-1">
                                <div class="d-flex align-items-center h-100-vh">
                                    <div class="login p-50">
                                        <h1 class="mb-2">Wooden Automative</h1>
                                        <p>Welcome back, please login to your account.</p>
                            <div class="error">@TempData["ErrorMsg"]</div>
                                <form method="post" role="form" class="form-horizontal" id="login-form">
                                @Html.AntiForgeryToken()
                                            <div class="row">
                                                <div class="col-12">
                                                    <div class="form-group">
                                                        <label class="control-label">Email*</label>
                                                         @Html.TextBoxFor(m => m.Email , new { id = "username", @class = "form-control", @placeholder = "Enter Your Email" })
                                                    </div>
                                                </div>
                                                 <div class="col-md-12">
                                                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger ", @style = "margin-top: -2%;" })
                                                </div>
                                                <div class="col-12">
                                                    <div class="form-group">
                                                        <label class="control-label">Password*</label>
                                                        @Html.PasswordFor(m => m.Password, new { id = "password", @class = "form-control", @placeholder = "Password", @style = "margin-bottom:14px !important;" })
                                                    </div>
                                                </div>
                                                 <div class="col-md-12">
                                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger ", @style = "margin-top: -2%;" })
                                                </div>
                                                <div class="col-12">
                                                    <div class="d-block d-sm-flex  align-items-center">
                                                        <a href="javascript:void(0);" class="ml-auto">Forgot Password ?</a>
                                                    </div>
                                                </div>
                                                <div class="col-12 mt-3">
                                                    <button class="btn btn-primary text-uppercase">Sign In</button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6 col-xxl-9 col-lg-7 bg-gradient o-hidden order-1 order-sm-2">
                                <div class="row align-items-center h-100">
                                    <div class="col-7 mx-auto ">
                                        <img class="img-fluid" src="~/assets/img/bg/login.svg" alt="">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!--end login contant-->
@section Scripts{
    <script>
        const loginModel = document.querySelector('#login-form');

        loginModel.addEventListener('submit', function (event) {
            var pass = $("#password").val();
            var cpass = $("#confrimPassword").val();

            // Prevent the form from submitting
            event.preventDefault();

            // Get the form data
            const formData = new FormData(loginModel);

            // Validate the form data
            if (pass === "" && cpass === "") {
                var x = document.getElementById("snackbar");
                x.className = "show";
                x.innerHTML = "please enter Password and Confrim Password";
                setTimeout(function () { x.className = x.className.replace("show", ""); }, 1000);
                return;
            }
            else if (pass === "") {
                var x = document.getElementById("snackbar");
                x.className = "show";
                x.innerHTML = "please enter a Password";
                setTimeout(function () { x.className = x.className.replace("show", ""); }, 1000);
                return;
            }
            else if (cpass === "") {
                var x = document.getElementById("snackbar");
                x.className = "show";
                x.innerHTML = "please enter a Confrim Password";
                setTimeout(function () { x.className = x.className.replace("show", ""); }, 1000);
                return;
            }
            else if (pass != cpass) {
                var x = document.getElementById("snackbar");
                x.className = "show";
                x.innerHTML = "Password and Confrim Password not matched";
                setTimeout(function () { x.className = x.className.replace("show", ""); }, 1000);
                return;
            }

            // Submit the form
            loginModel.submit();
        });

        $(document).ready(function () {
        });
    </script>
}


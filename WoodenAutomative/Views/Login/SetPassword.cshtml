@model WoodenAutomative.Domain.Dtos.Request.Password.SetForgotPasswordRequest
@{
    ViewData["Title"] = "Set New Password";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<style>

</style>
<div class="loader">
    <div class="h-100 d-flex justify-content-center">
        <div class="align-self-center">
            <img src="~/assets/img/loader/loader.svg" alt="loader">
        </div>
    </div>
</div>
<!-- end pre-loader -->
<!--start login contant-->
<div class="app-contant">
    <div class="bg-white comingsoon">
        <div class="container-fluid p-0">
            <div class="row no-gutters">
                <div class="col-lg-6 align-self-center bg-gradient">
                    <div class="d-flex align-items-center h-100-vh">
                        <div class="comingsoon-wrap w-100">
                            <div class="row no-gutters align-items-center justify-content-center">
                                <div class="col-md-10 text-center m-b-40" id="setPassword">

                                    <!-- Coming soon text -->
                                    <div class="px-5">
                                        <h3 class="text-white display-3 font-weight-normal">Set New Password</h3>
                                    </div>
                                    <!-- newsletter -->
                                    <div class="row no-gutters" id="setPassword">
                                        <div class="col-md-7 mx-auto">
                                            <p class="text-white">Please provide new password</p>
                                            <span class="visually-hidden" id="errormsg" style="color: red;"> Password and Confrim Password not matched</span>
                                            <form class="px-5 mt-3" method="post" id="setpassword">
                                                <input type="hidden" name="Email" value="@ViewBag.Email"/>
                                                @Html.PasswordFor(m => m.Password, new { id = "password", @class = "form-control bg-white-inverse", @placeholder = "Enter Password",})
                                                <span id="passwordError" class="text-danger"></span>
                                                <br />
                                                @Html.PasswordFor(m => m.ConfrimPassword, new { id = "confrimPassword", @class = "form-control bg-white-inverse", @placeholder = "Enter Confirm Password" })
                                                <span id="confrimpasswordError" class="text-danger"></span>
                                                <br />
                                                <div class="mt-3"><button type="submit" class="btn btn-inverse-light" id="save"> Save </button></div>
                                            </form>
                                        </div>
                                    </div>

                                </div>

                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 align-self-end">
                    <img class="img-fluid" src="~/assets/img/bg/coming-soon-bg.svg" alt="">
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>


        $("form").submit(function () {
            $("#passwordError").text("");
            $("#confrimpasswordError").text("");

            var password = $("#password").val();
            var confrimpassword = $("#confrimPassword").val();

            if (password == "" && confrimpassword == "") {
                $("#passwordError").text("Password is required");
                $("#confrimpasswordError").text("Confrim Password is required");
                return false;
            }
            else if (password == "") {
                $("#passwordError").text("Password is required");
                return false;
            }
            else if (confrimpassword == "") {
                $("#confrimpasswordError").text("Confrim Password is required");
                return false;
            }
            else if (password != confrimpassword) {
                $("#confrimpasswordError").text("Password and Confrim Password is not matched");
                return false;
            }
        });

        $("#password").on("input", function () {
            $("#passwordError").text("");
        });

        $("#confrimPassword").on("keyup", function () {
            var password = $("#password").val();
            var confrimpassword = $("#confrimPassword").val();
            $("#confrimpasswordError").text("");
            if (password != confrimpassword) {
                $("#confrimpasswordError").text("Password and Confrim Password is not matched");
            }

        });   
        
        $("#password").on("keyup", function () {
            var password = $("#password").val();
            var confrimpassword = $("#confrimPassword").val();
            $("#confrimpasswordError").text("");
            if (password != confrimpassword) {
                $("#confrimpasswordError").text("Password and Confrim Password is not matched");
            }

        });
    </script>
}